<!-- indent:2
 Because XML as a layout language required deep nesting.
-->

<GuiXml>
  <Controls>
    <TopLevelControl
      name="ZZEditBox_TopLevel"
      hidden="true"
      movable="true"
      mouseEnabled="true"
      resizeHandleSize="10"
      allowBringToTop="true"
      clampedToScreen="false"
    >
      <Dimensions x="900" y="750" />

      <Controls>
        <Backdrop name="$(parent)BG"
        inherits="ZO_DefaultBackdrop"
        />

        <Label  name="$(parent)WindowTitle"
          text="ZZEditBox"
          font="ZoFontWindowTitle"
          color="CFDCBD"
          wrapMode="ELLIPSIS"
          verticalAlignment="TOP">
          <Anchor relativeTo="$(parent)"
            relativePoint="TOPLEFT"
            point="TOPLEFT"
            offsetX="5"
            offsetY="5" />
        </Label>


      </Controls>
    </TopLevelControl>
</Controls>
</GuiXml>
